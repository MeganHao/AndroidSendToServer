<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="10px">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10px">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/button11"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="Back" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created By strife"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_gravity="right"/>

        <TextView
            android:id="@+id/footerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://strife.pl/?p=123" android:layout_gravity="right"/>

    </LinearLayout>

</LinearLayout>